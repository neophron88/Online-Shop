<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GlobalButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">14dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAppearance">@style/Title2TextAppearanceSemiBold</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShapeAppearance</item>
    </style>

    <style name="ButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>



</resources>